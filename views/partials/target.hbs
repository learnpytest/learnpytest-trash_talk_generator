{{!-- cards for targets --}}
<form action="/"
      method="POST">
  <div class="card-deck">
    {{#each partials.targets}}
    <div class="col-4 mb-2">
      <div class="card text-center justify-content-center align-items-center h-100">
        <img class="card-img-top mb-3 justify-content-center align-items-center text-center"
             src="{{image}}"
             alt="poster">
        <div class="card-body px-2">
          <div class="form-check">
            <input class="form-check-input"
                   type="radio"
                   name="{{id}}"
                   id="{{character_en}}>
            <label class="
                   form-check-label"
                   for="{{character_en}}">
            {{character}}
            </label>
          </div>

        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <div class="row feedback-wrapper mt-4 mx-0">
    <div class="col-2 mx-auto px-3 px-0 mx-0">
      <button class="btn btn-success"
              type="submit">產生幹話</button>
    </div>
    <div class="col-10 mx-auto ml-0 px-0"
         style="height: 100px;">
      <div class="card w-100 h-100">
        <div class="card-body">
          <p class="card-text">{{trashTalk}}</p>
        </div>
      </div>
    </div>
  </div>
</form>